# Environment Configuration for WiFi Payment System

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_PATH=./data/database.db

# Airtel Money API Configuration
AIRTEL_API_BASE_URL=https://openapi.airtel.africa
AIRTEL_CLIENT_ID=your_airtel_client_id_here
AIRTEL_CLIENT_SECRET=your_airtel_client_secret_here
AIRTEL_ENVIRONMENT=sandbox  # or 'production'

# MTN Mobile Money API Configuration
MTN_API_BASE_URL=https://api.mtn.com
MTN_API_KEY=your_mtn_api_key_here
MTN_API_SECRET=your_mtn_api_secret_here
MTN_ENVIRONMENT=sandbox  # or 'production'
MTN_COLLECTION_SUB_KEY=your_mtn_collection_subscription_key_here
MTN_DISBURSEMENT_SUB_KEY=your_mtn_disbursement_subscription_key_here

# Africa's Talking SMS Configuration (for notifications)
AFRICAS_TALKING_USERNAME=your_at_username_here
AFRICAS_TALKING_API_KEY=your_at_api_key_here

# Application Secrets
JWT_SECRET=your_jwt_secret_here_change_in_production
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
BASE_URL=http://localhost:3000

# Payment Configuration
PAYMENT_TIMEOUT_MINUTES=5
MAX_RETRY_ATTEMPTS=3